<%= simple_form_for @workout, defaults: { html: { class: 'form-horizontal' }} do |f| %>
  <%= f.input :date, label: 'Date', input_html: { class: 'form-control' } %>
  <%= f.input :workout, label: 'What body area did you workout?', input_html: { class: 'form-control' } %>
  <%= f.input :mood, label: 'How were you feeling?', input_html: { class: 'form-control' } %>
  <%= f.input :length, label: 'How long was the workout?', input_html: { class: 'form-control' } %>
</br>
  <%= f.button :submit %>
<% end %>
